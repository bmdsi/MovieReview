<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_list_rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/layout_padding">

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="@dimen/thumb_width"
        android:layout_height="@dimen/thumb_height"
        android:layout_alignParentStart="true"
        android:contentDescription=""
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/simple_list_arrowImageView"
        android:layout_width="@dimen/arrow_image_width"
        android:layout_height="@dimen/arrow_image_height"
        android:layout_alignParentRight="true"
        android:contentDescription=""
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_right_black_24dp" />

    <TextView
        android:id="@+id/simple_list_TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/title_text_padding"
        android:layout_toEndOf="@id/thumb"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/simple_list_arrowImageView"
        tools:text="Movie Title" />

</RelativeLayout>
